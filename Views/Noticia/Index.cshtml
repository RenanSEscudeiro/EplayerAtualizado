@model Noticia
@{
    ViewData["Title"] = "Noticias";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"] </h1>
</div>

<form class="cadastro" action = "@Url.Action("Cadastrar")"  method="post" enctype="multipart/form-data">

    <div class="campo">
    <label for="IdNoticia"> Id da Noticia </label>
    <input type="text" name="IdNoticia" id="IdNoticia">
    </div>

    <div class="campo">
    <label for="Titulo"> Título da Noticia </label>
    <input type="text" name="Titulo" id="Titulo">
    </div>

    <div class="campo">
    <label for="Texto"> Texto da Noticia </label>
    <input type="text" name="Texto" id="Texto">
    </div>

    <div class="campo">
    <label for="Imagem"> Imagem da Noticia </label>
    <input type="file" name="Imagem">
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table>
    
    <thead>
        <th>Id</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
       @foreach (var item in ViewBag.Noticias)
       {
        <tr>
                <td>@item.IdNoticia</td>
                <td>@item.Titulo</td>
                <td>@item.Texto</td>
                <td> <img src="img/Noticias/@item.Imagem" alt="Noticia @item.Imagem" width="200"></td>
                <td>
                    <a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@item.IdNoticia"> <i class="fa fa-trash"></i></a>
                </td>
        </tr> 
       }
    </tbody>
</table>